<% cache entry do %>
  <%= link_to entry, id: "entry_list_item_#{entry.id}", class:"flex flex-row justify-start gap-x-2",
              data: { "turbo-frame": "entry-details", "action": "entry-list-component#click" } do %>
    <div class="flex flex-row">
      <div class="w-12 text-sm"><%= entry_status(entry) %></div>
      <div class="w-16"><%= entry.location %></div>
    </div>
    <div class="flex flex-row flex-auto gap-x-4 gap-y-2">
      <div class="w-1/3"><%= entry.source %></div>
      <div class="w-1/3"><%= entry.english %></div>
      <div class="w-1/3"><%= entry.chinese %></div>
    </div>
  <% end %>
<% end %>
