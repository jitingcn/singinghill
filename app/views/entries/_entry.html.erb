<% cache entry do %>
  <turbo-frame id="<%= dom_id entry %>" class="flex flex-col gap-2" data-controller="entry-details" data-action="resize@window->entry-details#resize_textarea">
    <div class="flex flex-col sm:flex-row gap-2 ">
      <div class="sm:w-1/3 flex flex-col flex-grow-0">
        <label for="source">原文</label>
        <textarea id="source" class="w-full h-auto p-2 hidden-scrollbar bg-gray-100 dark:bg-gray-700"><%= entry.source %></textarea>
      </div>
      <div class="sm:w-1/3 flex flex-col flex-shrink">
        <label for="english">英文翻译</label>
        <textarea id="english" class="w-full h-auto p-2 hidden-scrollbar bg-gray-100 dark:bg-gray-700"><%= entry.english %></textarea>
      </div>
      <div class="sm:w-1/3 flex flex-col flex-shrink">
        <label for="chinese">中文翻译</label>
        <textarea id="chinese" class="w-full h-auto p-2 hidden-scrollbar bg-gray-100 dark:bg-gray-700 font-cn"><%= entry.chinese %></textarea>
      </div>
    </div>
  </turbo-frame>
<% end %>
