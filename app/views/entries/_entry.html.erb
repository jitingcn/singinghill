<% cache entry do %>
  <turbo-frame id="<%= dom_id entry %>" class="flex flex-row gap-2 p-2" data-controller="editor">
    <div class="w-1/3 h-32 flex flex-col">
      <label for="source">source</label>
      <textarea id="source" class="w-full h-32 p-2"><%= entry.source %></textarea>
    </div>
    <div class="w-1/3 h-32 flex flex-col">
      <label for="english">english</label>
      <textarea id="english" class="w-full h-32 p-2"><%= entry.english %></textarea>
    </div>
    <div class="w-1/3 h-32 flex flex-col">
      <label for="chinese">chinese</label>
      <textarea id="chinese" class="w-full h-32 p-2"><%= entry.chinese %></textarea>
    </div>
  </turbo-frame>
<% end %>
