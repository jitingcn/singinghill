<% cache entry do %>
  <turbo-frame id="<%= dom_id entry %>" class="flex flex-col gap-2" data-controller="entry-details" data-action="resize@window->entry-details#resize_textarea">
    <div class="flex flex-col sm:flex-row gap-2 ">
      <% width = entry.english.blank? ? "sm:w-1/2" : "sm:w-1/3" %>
      <div class="<%= width %> flex flex-col flex-grow-0">
        <label for="source">原文</label>
        <textarea id="source" lang="ja" class="w-full h-auto p-2 overflow-hidden hidden-scrollbar bg-gray-100 dark:bg-gray-700"><%= entry.source %></textarea>
      </div>
      <% unless entry.english.blank? %>
      <div class="<%= width %> flex flex-col flex-shrink">
        <label for="english">英文翻译</label>
        <textarea id="english" lang="en" class="w-full h-auto p-2 overflow-hidden hidden-scrollbar bg-gray-100 dark:bg-gray-700"><%= entry.english %></textarea>
      </div>
      <% end %>
      <div class="<%= width %> flex flex-col flex-shrink">
        <label for="chinese">中文翻译</label>
        <textarea id="chinese" lang="zh-Hans" class="w-full h-auto p-2 overflow-hidden hidden-scrollbar bg-gray-100 dark:bg-gray-700 font-cn"><%= entry.chinese %></textarea>
      </div>
    </div>
  </turbo-frame>
<% end %>
