<%= link_to @entry, id: "entry_list_item_#{@entry.id}",
            class:"flex flex-row hover:bg-blue-300 justify-start gap-x-2 even:bg-gray-200 odd:bg-gray-100
            dark:even:bg-gray-700 dark:odd:bg-gray-500 #{ @active == true ? 'text-lightBlue-600 dark:text-indigo-400' : ''}",
            data: { "turbo-frame": "entry-details", "action": "entry-list-component#click" } do %>
  <div class="flex flex-row text-sm">
    <div class="w-12"><%= @entry.humanize_status %></div>
    <div class="w-20 hidden md:block"><%= @entry.narrator&.narrator_chinese || "" %></div>
  </div>
  <div class="flex flex-row flex-auto gap-x-4 gap-y-2">
    <div class="sm:w-1/3"><%= @entry.source %></div>
    <div class="w-1/3 hidden sm:block"><%= @entry.english %></div>
    <div class="w-1/3 hidden sm:block"><%= @entry.chinese %></div>
  </div>
<% end %>
